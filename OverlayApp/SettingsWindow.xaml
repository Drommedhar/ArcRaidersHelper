<Window x:Class="OverlayApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Overlay Settings"
        Width="480"
        Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Customize overlay behavior"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,12" />

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <GroupBox Header="Layout">
                    <StackPanel Margin="10,6">
                        <CheckBox Content="Hide on launch"
                                  IsChecked="{Binding HideOnLaunch}" />
                        <CheckBox Content="Always on top"
                                  IsChecked="{Binding AlwaysOnTop}" />
                        <CheckBox Content="Enable click-through by default"
                                  IsChecked="{Binding ClickThroughEnabled}" />
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,6,0,0">
                            <TextBlock Text="Overlay opacity"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0" />
                            <Slider Minimum="0.2"
                                    Maximum="1"
                                    Width="200"
                                    Value="{Binding OverlayOpacity, Mode=TwoWay}" />
                            <TextBlock Text="{Binding OverlayOpacity, StringFormat={}{0:P0}}"
                                       Width="60"
                                       HorizontalAlignment="Right" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,6,0,0">
                            <TextBlock Text="Click-through opacity"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0" />
                            <Slider Minimum="0.1"
                                Maximum="1"
                                Width="200"
                                Value="{Binding ClickThroughOverlayOpacity, Mode=TwoWay}" />
                            <TextBlock Text="{Binding ClickThroughOverlayOpacity, StringFormat={}{0:P0}}"
                                   Width="60"
                                   HorizontalAlignment="Right" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Tracker">
                    <StackPanel Margin="10,6">
                        <TextBlock Text="URL" />
                        <TextBox Text="{Binding TrackerUrl, Mode=TwoWay}" Margin="0,4,0,0" />
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Hotkeys">
                    <StackPanel Margin="10,6">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6" VerticalAlignment="Center">
                            <TextBlock Text="Toggle"
                                       Width="130" />
                            <TextBox Text="{Binding ToggleHotkeyText, Mode=TwoWay}" Width="220" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6" VerticalAlignment="Center">
                            <TextBlock Text="Exit"
                                       Width="130" />
                            <TextBox Text="{Binding ExitHotkeyText, Mode=TwoWay}" Width="220" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6" VerticalAlignment="Center">
                            <TextBlock Text="Click-through"
                                       Width="130" />
                            <TextBox Text="{Binding ClickThroughHotkeyText, Mode=TwoWay}" Width="220" />
                        </StackPanel>
                        <TextBlock Text="Format example: Ctrl+Alt+T"
                                   Foreground="#AAFFFFFF"
                                   FontSize="12" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel"
                    Width="80"
                    Click="OnCancel" />
                <Button Content="Apply"
                    Margin="8,0,0,0"
                    Width="120"
                    IsDefault="True"
                    Click="OnApply" />
        </StackPanel>
    </Grid>
</Window>
