<Window x:Class="OverlayApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:infra="clr-namespace:OverlayApp.Infrastructure"
        mc:Ignorable="d"
        Title="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_Title]}"
        Width="480"
        Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False"
        Loaded="OnWindowLoaded">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_Subtitle]}"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,12" />

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <GroupBox Header="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_General]}">
                    <StackPanel Margin="10,6">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_Language]}" Width="130" VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding AvailableLanguages}"
                                      SelectedItem="{Binding SelectedLanguage}"
                                      DisplayMemberPath="Name"
                                      Width="200" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_Layout]}">
                    <StackPanel Margin="10,6">
                        <CheckBox Content="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_HideOnLaunch]}"
                                  IsChecked="{Binding HideOnLaunch}" />
                        <CheckBox Content="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_AlwaysOnTop]}"
                                  IsChecked="{Binding AlwaysOnTop}" />
                        <CheckBox Content="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_ClickThroughDefault]}"
                                  IsChecked="{Binding ClickThroughEnabled}" />
                        <CheckBox x:Name="AutoCaptureCheckBox"
                                  Content="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_AutoCapture]}"
                                  IsChecked="{Binding AutoCaptureEnabled}"
                                  Checked="OnAutoCaptureChecked" />
                        <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_AutoCaptureHint]}"
                                   TextWrapping="Wrap"
                                   Margin="24,2,0,0"
                                   Foreground="#AAFFFFFF" />
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,6,0,0">
                            <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_Opacity]}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0" />
                            <Slider Minimum="0.2"
                                    Maximum="1"
                                    Width="200"
                                    Value="{Binding OverlayOpacity, Mode=TwoWay}" />
                            <TextBlock Text="{Binding OverlayOpacity, StringFormat={}{0:P0}}"
                                       Width="60"
                                       HorizontalAlignment="Right" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,6,0,0">
                            <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_ClickThroughOpacity]}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0" />
                            <Slider Minimum="0.1"
                                Maximum="1"
                                Width="200"
                                Value="{Binding ClickThroughOverlayOpacity, Mode=TwoWay}" />
                            <TextBlock Text="{Binding ClickThroughOverlayOpacity, StringFormat={}{0:P0}}"
                                   Width="60"
                                   HorizontalAlignment="Right" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_Hotkeys]}">
                    <StackPanel Margin="10,6">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_Toggle]}"
                                       Width="130" />
                            <TextBox Text="{Binding ToggleHotkeyText, Mode=TwoWay}" Width="220" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_Exit]}"
                                       Width="130" />
                            <TextBox Text="{Binding ExitHotkeyText, Mode=TwoWay}" Width="220" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_ClickThrough]}"
                                       Width="130" />
                            <TextBox Text="{Binding ClickThroughHotkeyText, Mode=TwoWay}" Width="220" />
                        </StackPanel>
                        <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_HotkeyExample]}"
                                   Foreground="#AAFFFFFF"
                                   FontSize="12" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_Cancel]}"
                    Width="80"
                    Click="OnCancel" />
                <Button Content="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Settings_Apply]}"
                    Margin="8,0,0,0"
                    Width="120"
                    IsDefault="True"
                    Click="OnApply" />
        </StackPanel>
    </Grid>
</Window>
