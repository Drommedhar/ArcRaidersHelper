<UserControl x:Class="OverlayApp.Views.NeededItemsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Needed items"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#F0FFFFFF" />
                    <TextBlock Text="Sorted by missing quantity"
                               Foreground="#88FFFFFF"
                               Margin="0,4,0,12" />
                </StackPanel>
            </DockPanel>

            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Margin="-6" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="260"
                                Margin="6"
                                Padding="14"
                                CornerRadius="14"
                                Background="#33241F1F">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#F0FFFFFF" />
                                <TextBlock Text="{Binding ItemId}" Foreground="#66FFFFFF" FontSize="12" />
                                <TextBlock Text="{Binding Missing, StringFormat=Missing x{0}}" FontSize="24" FontWeight="Bold" Foreground="#FFB347" Margin="0,6,0,4" />
                                <ProgressBar Value="{Binding ProgressPercent}" Maximum="100" Height="10" Margin="0,6,0,2" />
                                <DockPanel>
                                    <TextBlock Text="Owned" Foreground="#88FFFFFF" />
                                    <TextBlock Text="{Binding Owned}" Foreground="#F0FFFFFF" Margin="4,0,16,0" />
                                    <TextBlock Text="Required" Foreground="#88FFFFFF" />
                                    <TextBlock Text="{Binding Required}" Foreground="#F0FFFFFF" Margin="4,0,0,0" />
                                </DockPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Text="{Binding EmptyMessage}"
                       Foreground="#AAFFFFFF"
                       FontStyle="Italic"
                       Margin="0,12,0,0" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
