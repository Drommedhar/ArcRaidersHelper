<UserControl x:Class="OverlayApp.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <TextBlock Text="Operations dashboard"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#F0FFFFFF"
                       Margin="0,0,0,8" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Margin="4"
                        Padding="20"
                        CornerRadius="16"
                        Background="#331E88FF">
                    <StackPanel>
                        <TextBlock Text="Active quests" Foreground="#CCFFFFFF" FontSize="14" />
                        <TextBlock Text="{Binding ActiveQuests}" FontSize="40" FontWeight="Bold" Foreground="#FFFFFFFF" />
                        <TextBlock Text="Tracked via ArcTracker"
                                   Foreground="#99FFFFFF" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="1"
                        Margin="4"
                        Padding="20"
                        CornerRadius="16"
                        Background="#33FF8A1E">
                    <StackPanel>
                        <TextBlock Text="Needed item types" Foreground="#CCFFFFFF" FontSize="14" />
                        <TextBlock Text="{Binding ItemsMissing}" FontSize="40" FontWeight="Bold" Foreground="#FFFFFFFF" />
                        <TextBlock Text="Missing pieces across quests"
                                   Foreground="#99FFFFFF" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="2"
                        Margin="4"
                        Padding="20"
                        CornerRadius="16"
                        Background="#3322FFAA">
                    <StackPanel>
                        <TextBlock Text="Last updated" Foreground="#CCFFFFFF" FontSize="14" />
                        <TextBlock Text="{Binding LastUpdatedLabel}" FontSize="24" FontWeight="Bold" Foreground="#FFFFFFFF" />
                        <TextBlock Text="From local progress file"
                                   Foreground="#99FFFFFF" />
                    </StackPanel>
                </Border>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Border Margin="4"
                        Padding="16"
                        CornerRadius="12"
                        Background="#22000000">
                    <StackPanel>
                        <TextBlock Text="Quest completion" Foreground="#AAFFFFFF" />
                        <ProgressBar Value="{Binding QuestCompletionPercent}" Maximum="100" Height="12" Margin="0,8,0,4" />
                        <TextBlock Text="{Binding QuestCompletionPercent, StringFormat={}{0:F1}%}" Foreground="#F0FFFFFF" />
                    </StackPanel>
                </Border>

                <Border Margin="4"
                        Padding="16"
                        CornerRadius="12"
                        Background="#22000000"
                        Grid.Column="1">
                    <StackPanel>
                        <TextBlock Text="Project completion" Foreground="#AAFFFFFF" />
                        <ProgressBar Value="{Binding ProjectCompletionPercent}" Maximum="100" Height="12" Margin="0,8,0,4" />
                        <TextBlock Text="{Binding ProjectCompletionPercent, StringFormat={}{0:F1}%}" Foreground="#F0FFFFFF" />
                    </StackPanel>
                </Border>

                <Border Margin="4"
                        Padding="16"
                        CornerRadius="12"
                        Background="#22000000"
                        Grid.Column="2">
                    <StackPanel>
                        <TextBlock Text="Hideout completion" Foreground="#AAFFFFFF" />
                        <ProgressBar Value="{Binding HideoutCompletionPercent}" Maximum="100" Height="12" Margin="0,8,0,4" />
                        <TextBlock Text="{Binding HideoutCompletionPercent, StringFormat={}{0:F1}%}" Foreground="#F0FFFFFF" />
                    </StackPanel>
                </Border>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Margin="4"
                        Padding="16"
                        CornerRadius="12"
                        Background="#22000000">
                    <StackPanel>
                        <TextBlock Text="Most progressed quests"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#F0FFFFFF" />
                        <ItemsControl ItemsSource="{Binding HighlightQuests}" Margin="0,12,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12" Margin="0,0,0,8" CornerRadius="10" Background="#330056FF">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#F0FFFFFF" />
                                            <ProgressBar Value="{Binding ProgressPercent}" Maximum="100" Height="8" Margin="0,6,0,2" />
                                            <TextBlock Text="{Binding ProgressText}" Foreground="#AAFFFFFF" FontSize="12" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1"
                        Margin="4"
                        Padding="16"
                        CornerRadius="12"
                        Background="#22000000">
                    <StackPanel>
                        <TextBlock Text="Top needed items"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#F0FFFFFF" />
                        <ItemsControl ItemsSource="{Binding TopNeededItems}" Margin="0,12,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12" Margin="0,0,0,8" CornerRadius="10" Background="#33FFAA22">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#F0FFFFFF" />
                                            <TextBlock Text="{Binding Missing, StringFormat=Missing x{0}}" Foreground="#CCFFFFFF" Margin="0,2,0,6" />
                                            <ProgressBar Value="{Binding ProgressPercent}" Maximum="100" Height="8" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
