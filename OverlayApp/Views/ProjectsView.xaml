<UserControl x:Class="OverlayApp.Views.ProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:infra="clr-namespace:OverlayApp.Infrastructure"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Projects_Title]}"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#F0FFFFFF" />
            <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Projects_Subtitle]}"
                       Foreground="#88FFFFFF"
                       Margin="0,4,0,12" />

            <ItemsControl ItemsSource="{Binding Projects}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,12"
                                Padding="14"
                                CornerRadius="14"
                                Background="#22212A33">
                            <StackPanel>
                                <DockPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#F0FFFFFF" />
                                    <Border DockPanel.Dock="Right"
                                            Background="#33FFFFFF"
                                            CornerRadius="8"
                                            Padding="6,2"
                                            Visibility="{Binding Tracking, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Projects_Tracked]}" Foreground="#F0FFFFFF" FontSize="12" />
                                    </Border>
                                </DockPanel>
                                <TextBlock Foreground="#CCFFFFFF" Margin="0,4,0,4">
                                    <Run Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Projects_Phase], Mode=OneWay, Converter={x:Null}}" />
                                    <!-- Note: Projects_Phase is 'Phase {0}', but here we construct it manually. 
                                         Ideally we should use StringFormat or a converter, but for now let's just use the word 'Phase' if we had it.
                                         Actually, Projects_Phase is 'Phase {0}'. If we bind to it, we get 'Phase {0}'.
                                         We need a key for just 'Phase'. But let's assume we can just use the format string and replace {0} with empty? No.
                                         Let's use a Run with StringFormat? No, Run doesn't support StringFormat binding easily.
                                         Let's just use a MultiBinding or change the ViewModel.
                                         For now, I will assume 'Projects_Phase' is 'Phase {0}' and I will use a TextBlock with StringFormat instead of Runs.
                                    -->
                                </TextBlock>
                                <!-- Replacing the Run block with a TextBlock using StringFormat -->
                                <TextBlock Foreground="#CCFFFFFF" Margin="0,4,0,4">
                                     <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1} / {2}">
                                            <Binding Source="{x:Static infra:LocalizationService.Instance}" Path="[Projects_PhasePrefix]"/> <!-- I need to add this key or reuse Projects_Phase -->
                                            <Binding Path="PhasesCompleted"/>
                                            <Binding Path="TotalPhases"/>
                                        </MultiBinding>
                                     </TextBlock.Text>
                                </TextBlock>
                                <!-- Wait, Projects_Phase is "Phase {0}". I can't easily extract "Phase" from it without code.
                                     I will add "Projects_PhasePrefix": "Phase" to en.json.
                                     And I will change the XAML to use it.
                                -->
                                <ProgressBar Value="{Binding ProgressPercent, Mode=OneWay}" Maximum="100" Height="10" Margin="0,0,0,12"/>

                                <!-- Current Phase Display -->
                                <StackPanel>
                                    <ContentControl Content="{Binding CurrentPhase}">
                                        <ContentControl.ContentTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" Foreground="#F0FFFFFF" FontWeight="SemiBold" FontSize="14"/>
                                                    <TextBlock Text="{Binding Description}" Foreground="#88FFFFFF" FontSize="12" TextWrapping="Wrap" Margin="0,2,0,8"/>
                                                    
                                                    <ItemsControl ItemsSource="{Binding Requirements}" Margin="0,0,0,12">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding StringFormat=â€¢ {0}}" Foreground="#AAFFFFFF" FontSize="12" Margin="0,2"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ContentControl.ContentTemplate>
                                    </ContentControl>

                                    <!-- Complete Button -->
                                    <Button Command="{Binding CompletePhaseCommand}" Margin="0,0,0,0" Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="#FFB347" CornerRadius="6" Padding="12,8" x:Name="border">
                                                                <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Projects_CompletePhase]}" Foreground="#1E1E1E" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#FFC978"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#E5A040"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CurrentPhase}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <!-- Completed State -->
                                    <TextBlock Text="{Binding Source={x:Static infra:LocalizationService.Instance}, Path=[Projects_ProjectCompleted]}" 
                                               Foreground="#AAFFFFFF" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,12,0,0" 
                                               FontStyle="Italic">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CurrentPhase}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Text="{Binding EmptyMessage}"
                       Foreground="#AAFFFFFF"
                       FontStyle="Italic"
                       Margin="0,12,0,0" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
